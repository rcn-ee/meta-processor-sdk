From 22e0efcc93d62838951e9598b90eb44de3dbc711 Mon Sep 17 00:00:00 2001
From: Murali Karicheri <m-karicheri2@ti.com>
Date: Tue, 3 May 2016 17:38:52 -0400
Subject: [PATCH 22/30] ARM: keystone: dts: add gbe and 10gbe netcp cpts
 bindings

This patch adds the netcp cpts DT bindings for the
gbe and 10gbe devices on the Keystone2 platforms.

Signed-off-by: WingMan Kwok <w-kwok2@ti.com>
---
 arch/arm/boot/dts/keystone-k2e-netcp.dtsi  | 28 +++++++++++++++++++++++++---
 arch/arm/boot/dts/keystone-k2hk-netcp.dtsi | 30 ++++++++++++++++++++++++++----
 arch/arm/boot/dts/keystone-k2l-netcp.dtsi  | 13 ++++++++++++-
 3 files changed, 63 insertions(+), 8 deletions(-)

diff --git a/arch/arm/boot/dts/keystone-k2e-netcp.dtsi b/arch/arm/boot/dts/keystone-k2e-netcp.dtsi
index da58f4c..4051720 100644
--- a/arch/arm/boot/dts/keystone-k2e-netcp.dtsi
+++ b/arch/arm/boot/dts/keystone-k2e-netcp.dtsi
@@ -299,7 +299,7 @@ netcp: netcp@24000000 {
 	ranges = <0 0x24000000 0x1000000>;
 
 	clocks = <&clkpa>, <&clkcpgmac>, <&chipclk12>;
-	clock-names = "pa_clk", "ethss_clk", "cpts_rft_clk";
+	clock-names = "pa_clk", "ethss_clk", "cpts";
 	dma-coherent;
 
 	ti,navigator-dmas =	<&dma_gbe 0>,
@@ -357,6 +357,17 @@ netcp: netcp@24000000 {
 			tx-channel = "nettx";
 			phys = <&gbe_serdes0>, <&gbe_serdes1>;
 
+			cpts {
+				status = "ok";
+				rftclk_sel = <0>;
+				/*rftclk_freq = <625000000>;*/
+				clock_mult = <4096>;
+				clock_shift = <9>;
+				clock_div = <5>;
+				ts_comp_length = <3>;
+				ts_comp_polarity = <1>; /* 1 - assert high */
+			};
+
 			interfaces {
 				gbe0: interface-0 {
 					slave-port = <0>;
@@ -582,8 +593,8 @@ netcpx: netcpx@2f00000 {
 	#size-cells	= <1>;
 	ranges;
 
-	clocks		= <&clkxge>;
-	clock-names	= "xge_clk";
+	clocks		= <&clkxge>, <&chipclk12>;
+	clock-names	= "xge_clk", "cpts";
 	dma-coherent;
 	/* big-endian; */
 
@@ -607,6 +618,17 @@ netcpx: netcpx@2f00000 {
 			tx-channel = "xnettx";
 			phys = <&xgbe_serdes>;
 
+			cpts {
+				status = "ok";
+				rftclk_sel = <0>;
+				/*rftclk_freq = <625000000>;*/
+				/*clock_mult = <2560>;*/
+				/*clock_shift = <10>;*/
+				/*clock_div = <1>;*/
+				ts_comp_length = <3>;
+				ts_comp_polarity = <1>; /* 1 - assert high */
+			};
+
 			interfaces {
 				xgbe0: interface-0 {
 					slave-port = <0>;
diff --git a/arch/arm/boot/dts/keystone-k2hk-netcp.dtsi b/arch/arm/boot/dts/keystone-k2hk-netcp.dtsi
index 8f5e8b6..a37624f 100644
--- a/arch/arm/boot/dts/keystone-k2hk-netcp.dtsi
+++ b/arch/arm/boot/dts/keystone-k2hk-netcp.dtsi
@@ -280,8 +280,8 @@ netcp: netcp@2000000 {
 	/* NetCP address range */
 	ranges  = <0 0x2000000 0x100000>;
 
-	clocks = <&clkpa>, <&clkcpgmac>, <&chipclk12>;
-	clock-names = "pa_clk", "ethss_clk", "cpts_rft_clk"	;
+	clocks = <&clkpa>, <&clkcpgmac>, <&chipclk13>;
+	clock-names = "pa_clk", "ethss_clk", "cpts";
 	dma-coherent;
 
 	ti,navigator-dmas =	<&dma_gbe 22>,	/* rx flow for CPSW port 0 */
@@ -323,6 +323,17 @@ netcp: netcp@2000000 {
 			tx-channel = "nettx";
 			phys = <&gbe_serdes>;
 
+			cpts {
+				status = "ok";
+				rftclk_sel = <1>;
+				/*rftclk_freq = <400000000>;*/
+				clock_mult = <2560>;
+				clock_shift = <10>;
+				clock_div = <1>;
+				ts_comp_length = <3>;
+				ts_comp_polarity = <1>; /* 1 - assert high */
+			};
+
 			interfaces {
 				gbe0: interface-0 {
 					slave-port = <0>;
@@ -533,8 +544,8 @@ netcpx: netcp@2f00000 {
 	#size-cells	= <1>;
 	ranges;
 
-	clocks		= <&clkxge>;
-	clock-names	= "xge_clk";
+	clocks		= <&clkxge>, <&chipclk13>;
+	clock-names	= "xge_clk", "cpts";
 	dma-coherent;
 	/* big-endian; */
 
@@ -558,6 +569,17 @@ netcpx: netcp@2f00000 {
 			tx-channel = "xnettx";
 			phys = <&xgbe_serdes>;
 
+			cpts {
+				status = "ok";
+				rftclk_sel = <1>;
+				/*rftclk_freq = <400000000>;*/
+				/*clock_mult = <2560>;*/
+				/*clock_shift = <10>;*/
+				/*clock_div = <1>;*/
+				ts_comp_length = <3>;
+				ts_comp_polarity = <1>; /* 1 - assert high */
+			};
+
 			interfaces {
 				xgbe0: interface-0 {
 					slave-port = <0>;
diff --git a/arch/arm/boot/dts/keystone-k2l-netcp.dtsi b/arch/arm/boot/dts/keystone-k2l-netcp.dtsi
index df606b3..04ba9f3 100644
--- a/arch/arm/boot/dts/keystone-k2l-netcp.dtsi
+++ b/arch/arm/boot/dts/keystone-k2l-netcp.dtsi
@@ -284,7 +284,7 @@ netcp: netcp@26000000 {
 	ranges = <0 0x26000000 0x1000000>;
 
 	clocks = <&clkpa>, <&clkcpgmac>, <&chipclk12>, <&clkosr>;
-	clock-names = "pa_clk", "ethss_clk", "cpts_rft_clk", "osr_clk";
+	clock-names = "pa_clk", "ethss_clk", "cpts", "osr_clk";
 	dma-coherent;
 
 	ti,navigator-dmas =	<&dma_gbe 0>,
@@ -341,6 +341,17 @@ netcp: netcp@26000000 {
 			tx-channel = "nettx";
 			phys = <&gbe_serdes0>, <&gbe_serdes1>;
 
+			cpts {
+				status = "ok";
+				rftclk_sel = <0>;
+				/*rftclk_freq = <399360000>;*/
+				/*clock_mult = <5000>;*/
+				/*clock_shift = <10>;*/
+				/*clock_div = <3>; */
+				ts_comp_length = <3>;
+				ts_comp_polarity = <1>; /* 1 - assert high */
+			};
+
 			interfaces {
 				gbe0: interface-0 {
 					slave-port = <0>;
