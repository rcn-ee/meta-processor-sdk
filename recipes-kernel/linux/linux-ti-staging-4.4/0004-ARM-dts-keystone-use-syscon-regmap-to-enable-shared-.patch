@@ -116,9 +121,9 @@ qmss: qmss@2a40000 {
 		#size-cells = <1>;
 		ranges;
 		pdsp0@0x2a10000 {
+			syscon-intd = <&pdsp_intd>;
 			reg = <0x2a10000 0x1000    /*iram */
 			       0x2a0f000 0x100     /*reg*/
-			       0x2a0c000 0x3c8	   /*intd */
 			       0x2a20000 0x4000>;  /*cmd*/
 			id = <0>;
 		};
