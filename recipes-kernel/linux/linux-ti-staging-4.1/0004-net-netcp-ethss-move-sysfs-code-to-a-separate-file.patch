+
+	strncpy(tmp_str, buf, len);
+	tmp_str[len] = '\0';
+	if (kstrtou8(tmp_str, 0, &reg_num))
+		return -EINVAL;
+
+	buf += (len + 1);
+	if (kstrtoul(buf, 0, &val))
+		return -EINVAL;
+
+	switch (reg_num) {
+	case 1:
+		p = GBE_REG_ADDR(slave, port_regs, ts_ctl);
+		break;
+	case 2:
+		p = GBE_REG_ADDR(slave, port_regs, ts_seq_ltype);
